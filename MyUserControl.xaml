<UserControl x:Class="MarketplaceDesktop.MyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarketplaceDesktop"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="800">
    <Grid>
        <!-- Верхняя темно-синяя полоса -->
        <Rectangle Fill="#15161d" Height="70" VerticalAlignment="Top"/>
        <!-- Красная полоса -->
        <Rectangle Fill="#d10024" Height="5" VerticalAlignment="Bottom" />
        <!-- Логотип -->
        <Image HorizontalAlignment="Left" Margin="10,0,0,0" Source="/MarketplaceDesktop;component/Resources/logo.png" Width="179" Height="123" VerticalAlignment="Center" />

    </Grid>
</UserControl>
